<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/monument.header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/monument"
        android:layout_marginBottom="-7dp"
        android:contentDescription="@string/monumentimage" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgwhitebox"
        android:layout_marginHorizontal="5dp">



        <TextView
            android:id="@+id/AccountRegister"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/account_register"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="80dp"
            android:layout_below="@id/AccountRegister"
            android:background="@drawable/card1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/namebox"
            />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@id/AccountRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/firstname"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="80dp"
            android:background="@drawable/card1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/firstname"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/namebox"
            />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_below="@id/firstname"
            android:hint="@string/lastname"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/lastname"
            android:background="@drawable/card1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/namebox" />

        <EditText
            android:id="@+id/contactNo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@id/lastname"
            android:hint="@string/contact"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_below="@id/contact"
            android:layout_height="80dp"
            android:background="@drawable/card1"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="@string/namebox"
            />

        <EditText
            android:id="@+id/mailId"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/contact"
            android:layout_marginTop="15dp"
            android:hint="@string/mail_id"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="80dp"
            android:background="@drawable/card1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mail"
            android:contentDescription="@string/namebox"
            />

        <EditText
            android:id="@+id/cityname"
            android:layout_width="match_parent"
            android:layout_below="@id/mail"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:hint="@string/city"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/cityname"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="20dp"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_button"
            android:contentDescription="SUBMIT"
            android:fontFamily="@font/source_sans_pro_bold"
            android:padding="10dp"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>



</LinearLayout>
